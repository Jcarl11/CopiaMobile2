<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivities.FileAddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/file_add_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="100"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Filename"
                android:inputType="text"
                android:maxLength="100"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/file_add_imageview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter" />

        <com.dpizarro.autolabel.library.AutoLabelUI
            android:id="@+id/file_add_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/file_add_choosefilebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="file_chooseClicked"
                android:text="BROWSE FILE"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_alignParentStart="true"/>

            <Button
                android:id="@+id/file_add_addbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="file_addClicked"
                android:text="ADD"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>