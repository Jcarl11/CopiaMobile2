<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPECIFICATIONS"
            android:textSize="20sp"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/specifications_edittext_document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Document Title"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/specifications_edittext_division"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Division"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/specifications_edittext_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Section"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/specifications_edittext_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:inputType="number"
            android:textColor="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="3">

            <EditText
                android:id="@+id/specifications_edittext_keywords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Keywords"
                android:textColor="@android:color/black"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/specifications_button_addkeyword"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Add"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>
        </LinearLayout>
        <com.dpizarro.autolabel.library.AutoLabelUI
            android:id="@+id/specifications_label_keywords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="3">

            <EditText
                android:id="@+id/specifications_edittext_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Add Remark"
                android:textColor="@android:color/black"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/specifications_button_addremark"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Add"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>
        </LinearLayout>
        <com.dpizarro.autolabel.library.AutoLabelUI
            android:id="@+id/specifications_label_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/specifications_btn_uploadfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="CHOOSE FILES"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"/>
        <com.dpizarro.autolabel.library.AutoLabelUI
            android:id="@+id/specifications_label_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/specifications_button_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="Upload"/>
    </LinearLayout>
</ScrollView>