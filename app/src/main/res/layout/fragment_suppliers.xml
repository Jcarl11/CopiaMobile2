<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/suppliers_edittext_representative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Representative"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/suppliers_edittext_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Position"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/suppliers_edittext_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company"
            android:textColor="@android:color/black"/>
        <EditText
            android:id="@+id/suppliers_edittext_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Brand"
            android:textColor="@android:color/black"/>

        <Spinner
            android:id="@+id/suppliers_combobox_industry"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:prompt="@string/prompt_industry"
            android:spinnerMode="dialog" />

        <Spinner
            android:id="@+id/suppliers_combobox_type"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:prompt="@string/prompt_type"
            android:spinnerMode="dialog" />

        <com.dpizarro.autolabel.library.AutoLabelUI
            android:id="@+id/suppliers_label_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:weightSum="3">

            <EditText
                android:id="@+id/suppliers_edittext_remarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Add Remark"
                android:textColor="@android:color/black"
                android:layout_weight="2"/>

            <Button
                android:id="@+id/suppliers_button_addremark"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Add"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_weight="1"/>
        </LinearLayout>
        <com.dpizarro.autolabel.library.AutoLabelUI
            android:id="@+id/suppliers_label_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/suppliers_btn_uploadfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="CHOOSE FILES"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/suppliers_btn_uploadimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="CHOOSE IMAGE"
            android:textColor="@android:color/white"
            android:layout_marginBottom="10dp"/>
        <com.dpizarro.autolabel.library.AutoLabelUI
            android:id="@+id/suppliers_label_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/suppliers_button_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:text="Upload"/>
    </LinearLayout>
</ScrollView>